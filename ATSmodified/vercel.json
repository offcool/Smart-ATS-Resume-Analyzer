{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python"
    },
    {
      "src": "resume-evaluator/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm run build", 
        "outputDirectory": "build"       
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "app.py"
    },
    {
      "src": "/(.*)",
      "dest": "resume-evaluator/build/$1"
    }
  ]
}